             x:Class="App1.ConfigPage">
    <ContentPage.Content>
        <ScrollView x:Name="diageScrollView" Orientation="Vertical" HeightRequest="100" IsVisible="True">
        <StackLayout>
            <TableView Intent="Settings " VerticalOptions="FillAndExpand" >
                    <TableRoot>
                        <TableSection Title="Language Selection">

                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Picker x:Name="ConfigLanguageCode1" Title="Primary Language" HorizontalOptions="StartAndExpand">
                                    </Picker>

                                    <Picker x:Name="ConfigLanguageCode2" Title="Secondary Language" HorizontalOptions="StartAndExpand">
                                    </Picker>
                                </StackLayout>
                            </ViewCell>
                        </TableSection>
                        <TableSection Title="Translation Settings">
                            <SwitchCell Text="Signal When Complete" />
                            <SwitchCell Text="Use Custom Model" On="true" />
                        </TableSection>

